def cook(self):
    if not self.file: return None
    f = file(self.file, 'r')
    s = f.read()
    f.close()
    g = Geometry()
    # We defer loading the SVG library until we need it.
    # This makes creating a node faster.
    import svg
    paths = svg.parse(s)
    for path in paths:
        g.add(path)
    t = Transform()
    if self.centered:
        x, y, w, h = list(g.bounds)
        t.translate(-x-w/2, -y-h/2)
    t.translate(self.x, self.y)
    g = t.map(g)
    return g
