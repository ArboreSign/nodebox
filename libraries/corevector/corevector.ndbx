def cook(self):
    seed(self.seed)
    if self.shape is None: return None
    new_shape = self.shape.clone()
    for point in new_shape.points:
        dx = (uniform(0, 1) - 0.5) * self.wx * 2
        dy = (uniform(0, 1) - 0.5) * self.wy * 2
        point.x += dx
        point.y += dy
    return new_shape]]></value>
