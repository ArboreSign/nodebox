    if self.scope in ["pt_c", "pt_p", "pt_g"]:
        _sort_paths = False
        return sort_points(self.shape, self.scope, self.order, **kwargs)
    elif self.scope == "p_g":
        return sort_paths(self.shape, self.order, **kwargs)
    elif self.scope == "c_p":
